<dl class="dl-horizontal">
  <dt> User </dt>
  <dd> <%= review.user_id %> </dd>

  <dt> Description </dt>
  <dd> <%= review.description %> </dd>

  <dt> Rating </dt>
  <dd> <%= review.rating %> / 5</dd>

  <% if review.user == current_user %>
    <p>
      <%= link_to 'Destroy Review', [review.product, review],
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </p>
  <%end %>
</dl>