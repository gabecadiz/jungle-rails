<dl class="dl-horizontal">
  <dt> User </dt>
  <dd> <%= review.user.first_name %> </dd>

  <dt> Description </dt>
  <dd> <%= review.description %> </dd>

  <dt> Rating </dt>
  <dd>
    <% for i in 1..review.rating do %>
      ⭐ ️
    <% end %>
    <% for i in 1..(5 - review.rating) do %>
      ★ ️
    <% end %>
  </dd>

  <% if review.user == current_user %>
   <dt><%= fa_icon('trash') %></dt>
  <dd>
    <%= link_to 'Delete Review', [review.product, review],
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
  </dd>
  <%end %>
</dl>